#:kivy 1.0.9

<Robot>:
    direction: 0
    size: 20, 20
    pos: self.pos
    color: 1, 1, 1, 0.8
    canvas.before:
        PushMatrix
        Rotate:
            angle: 360 - self._direction
            origin: self.center

        Color:
            rgba: self.color
        Line:
            width: 1.3
            circle: (self.center[0], self.center[1], 10)

        Color:
            rgba: 1, 1, 0, 0.8
        Line:
            width: 1.1
            points: self.center_x, self.center_y , self.center_x + 10, self.center_y

    canvas.after:
        PopMatrix

