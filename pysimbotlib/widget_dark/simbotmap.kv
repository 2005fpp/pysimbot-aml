#:kivy 1.0.9

<ObstacleItem>:
    group: 'obs'
    pos: self.pos
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            width: 1.3
            rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1])

<ObjectiveItem>:
    group: 'obj'
    pos: self.pos
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 0, 0.5
        Rectangle:
            pos: self.pos
            size: self.size

# any other widget... to give it a border.
<BorderedLabel@Label+Widget>
    border_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.border_color
        Line:
            width: 2
            rectangle: self.pos[0], self.pos[1], self.size[0], self.size[1]

<PySimbotMap>:
    playground: playground
    pos: 0, 0
    size: 900, 600

    canvas:
        Color:
            rgba: 1, 1, 1, 0.2
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None
        size: 900, 600

        RelativeLayout:
            id: playground
            size_hint: None, None
            size: 700, 600
            pos: 0, 0

        BorderedLabel:
            id: 'lbl_description'
            text: 'Simulation Count: ' + str(root.simulation_count) + '\nTime: '+ str(root.iteration) + '\nEat: ' + str(root.eat_count) + '\nFood Moved: ' + str(root.food_move_count) + '\nScore: ' + root.scoreStr + '\n\n----------------------\n[Shortcuts]\nn: to change the food position'
            text_size: self.size
            padding: (15, 10)
            halign: 'left'
            valign: 'top'